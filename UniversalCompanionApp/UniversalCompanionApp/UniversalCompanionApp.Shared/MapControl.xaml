<UserControl
    x:Class="UniversalCompanionApp.MapControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalCompanionApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <Image Source="Assets/maptile.png" Stretch="Fill" />
        <Rectangle RadiusX="5" RadiusY="5" Stroke="White" Fill="DarkOliveGreen" Height="24" VerticalAlignment="Top"></Rectangle>
        <TextBlock x:Name="txtMap" Text="Location" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" />
        <Rectangle RadiusX="5" RadiusY="5" Stroke="White" Fill="Transparent"></Rectangle>
        <Canvas Background="Transparent" x:Name="pinCanvas">
        </Canvas>
    </Grid>
</UserControl>
